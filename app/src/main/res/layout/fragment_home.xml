<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.home.HomeFragment">


    <EditText
        android:id="@+id/edit_text_date_request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_date_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT DATE"
        android:layout_alignBottom="@+id/edit_text_date_request"
        android:layout_toEndOf="@+id/edit_text_date_request" />

    <EditText
        android:id="@+id/edit_text_start_time_request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_date_request"
        />

    <Button
        android:id="@+id/btn_start_time_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT START TIME"
        app:layout_constraintTop_toBottomOf="@+id/btn_date_request"
        android:layout_alignBottom="@+id/edit_text_start_time_request"
        android:layout_toRightOf="@+id/edit_text_start_time_request"
        android:layout_toEndOf="@+id/edit_text_start_time_request" />

    <EditText
        android:id="@+id/edit_text_end_time_request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_start_time_request"
        />

    <Button
        android:id="@+id/btn_end_time_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT END TIME"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_time_request"
        android:layout_alignBottom="@+id/edit_text_end_time_request"
        android:layout_toRightOf="@+id/edit_text_end_time_request"
        android:layout_toEndOf="@+id/edit_text_end_time_request" />







</androidx.constraintlayout.widget.ConstraintLayout>