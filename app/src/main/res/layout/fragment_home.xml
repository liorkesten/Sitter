<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:paddingBottom="70dp"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/date_fragment_container_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:background="#000099" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/start_time_fragment_container_view"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                tools:background="#009900" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/end_time_fragment_container_view"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                tools:background="#882244" />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/location_fragment_container_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:background="#990000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id = "@+id/recycler_view_children"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/payment_fragment_container_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:background="#999999" />

        <EditText
            android:id="@+id/description_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:autofillHints="Add a Comment"
            android:hint="@string/comment_hint"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="5"
            android:minLines="3" />


        <Button
            android:id="@+id/publish_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/primary"
            android:text="@string/publish_request_button"
            android:textColor="@color/secondary" />

    </LinearLayout>
</ScrollView>




















