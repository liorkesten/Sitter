<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:orientation="vertical"
    tools:context=".ui.parent.publishRequest.PublishRequestFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/date_fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        tools:background="#000099" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/start_time_fragment_container_view"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:background="#009900" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/end_time_fragment_container_view"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:background="#882244" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/location_fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:background="#990000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Children:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_children"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/payment_fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:background="#999999" />

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:autofillHints="Add a Comment"
        android:hint="@string/comment_hint"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="5"
        android:minLines="3" />


    <Button
        android:id="@+id/publish_request_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.5"
        android:backgroundTint="@color/primary"
        android:text="@string/publish_request_button"
        android:textColor="@color/secondary" />

</LinearLayout>




















